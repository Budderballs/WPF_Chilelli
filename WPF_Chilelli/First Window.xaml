<Window x:Class="WPF_Chilelli.First_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Chilelli"
        mc:Ignorable="d"
        Title="First_Window" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="typeHere" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="207"/>
        <TextBlock x:Name="showHere" HorizontalAlignment="Center" Margin="0,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="139" Width="780" Text="{Binding Text, ElementName=typeHere}"/>
        <Button x:Name="button" Content="Page 2" HorizontalAlignment="Left" Margin="697,361,0,0" VerticalAlignment="Top" Height="47" Width="79" Click="button_ClickP2"/>
        <Button x:Name="END" Content="END" HorizontalAlignment="Left" Margin="93,370,0,0" VerticalAlignment="Top" Width="213" Height="38" Click="END_Click"/>
    </Grid>
</Window>